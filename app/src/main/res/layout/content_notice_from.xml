<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_body"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText android:textSize="14sp" android:gravity="left|top"
                    android:id="@+id/noticeSubject"
                    android:layout_margin="5dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/shapeviewgeneral"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:minHeight="40dp"
                    android:hint="Subject..." />
                <View
                    android:layout_width="match_parent"
                    android:background="#212121"
                    android:layout_height="1dp"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/shapeviewgeneral"
                    android:gravity="left|top"
                    android:id="@+id/notice_description"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:hint="Compose notice" />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <ImageView android:gravity="center"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:id="@+id/NoticeImageview"
                    android:visibility="gone"
                    android:src="@drawable/ic_menu_gallery"></ImageView>


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#212121"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_margin="16dp"
                android:text="value of selected file"
                android:id="@+id/attatchedFileName"/>
        </LinearLayout>


    </LinearLayout>


    </ScrollView>
</RelativeLayout>